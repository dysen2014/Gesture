<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="common_btn_wra">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="common_edt_h48">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/shape_view_bg</item>
    </style>

    <style name="common_txt_title">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="match_weight">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="wrap_wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="match_match">
        <item name="android:orientation">vertical</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>
    <style name="match_wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="layout_header_select" parent="match_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/main_header_bg</item>
    </style>

    <style name="match_match_h">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="match_wrap_h">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap_cv" parent="wrap_wrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_user_black_12" parent="wrap_wrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>
    <style name="tv_user_gray_12" parent="wrap_wrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>
    <style name="user_safety_line" parent="view_line_v">
    <item name="android:layout_height">@dimen/w_0.1</item>
</style>

    <style name="view_line_v">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/w_0.5</item>
        <item name="android:background">@color/vertical_line_color</item>
    </style>

    <style name="rl_user_item" parent="match_wrap">
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="img_user_item_r" parent="wrap_wrap">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/ico_arrowright</item>
    </style>
</resources>
